/* pages/pro/mypro/mypro.wxss */
page {
  background-color: #fbf7ed;
}

.proinfo {
  width: 100%;
  height: 270rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.proinfo .detail{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
}
.proinfo .detail .avator image{
    width: 90rpx;
    height: 90rpx;
    display: block;
    flex-shrink: 0;
}
.proinfo .detail .nameinfo{
    flex: 1;
    flex-shrink: 2;
overflow: hidden;
margin-left: 16rpx;
}
.proinfo .detail .nameinfo .nicknam{
    color: #ffffff;
    font-size: 32rpx;
} 
.proinfo .detail .nameinfo .fans{
    color: #ffffff;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.proinfo .brief{
    margin-top: 10rpx;
}
.proinfo .brief text{
     margin: 0 20rpx;
  line-height: 1.1rem;
  word-break: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  color: #fff;
  font-size: 28rpx;
  opacity: 0.7;
  margin-top: 10rpx;
  -webkit-line-clamp:3
}

.art {
  padding: 0 20rpx;
}

.art .title{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 10rpx;
    border-bottom: 1rpx solid #f6f6f6;
    color: #36b9af;
    font-size: 28rpx;
}
.art .title text{
    display: inline-block;
}
.art .title .code{

}
.art .title .price{
flex: 1;
margin-left: 30rpx;
}
.art .point {
  height: 28rpx;
  font-size: 26rpx;
  color: #36b9af;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.point .circle {
  height: 16rpx;
  width: 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  border: 6rpx solid #36b9af;
  margin-left: 10rpx;
}

.point .date {
  margin-left: 6rpx;
}

.point  .game_type {
  margin-left: 10rpx;
}

.art .vertical_line {
  position: relative;
  width: 6rpx;
   height: 20rpx;
  left: 21rpx;
  background-color: #36b9af;
}
.art .vertical_line._bottom{
   height: 40rpx;
}
.art .artcontent {
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
}


.art .free_content {
  color: #5c5c5c;
  font-size: 30rpx;
  padding: 20rpx;
}

.art .free_content text {
  word-break: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  line-height: 1.2rem;
}
